<section>
    <div class="container">
        <div class="row">
             <a href="/admin/add-product" class="btn btn-success">Add product</a>
                  <table class="table" id="productsTable">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">category</th>
                    <th scope="col">discription</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Discription}}</td>
                    <td><img style="height: 50px; width:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete{{this.Name}}?')">Delete</a></td>
                    
                    </tr>
                    {{/each}}
                </tbody>
                </table>
        </div>
    </div>
</section>
<script>
    $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>